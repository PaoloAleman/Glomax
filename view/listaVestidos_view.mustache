{{>header}}
<main class="">
    <div class="mx-auto border border-[#B1AC33] lg:w-[300px] lg:h-[100px] w-[210px] h-[90px] mt-10 flex items-center justify-center border border-2 rounded-3xl">
        <h1 class="text-[#B1AC33] lg:text-4xl text-2xl">Vestidos</h1>
    </div>
    <div class="mt-20 flex justify-around items-center">
        <div >
            <form action="/vestido/listarVestidos" method="post">
                <select name="vestidoBuscado" class="w-[500px] h-[60px] bg-black
                border border-[#B1AC33] text-[#B1AC33] py-2 text-2xl pl-4">
                    {{#vestidosSelect}}
                        <option value="{{nombre}}" class="text-[#B1AC33] h-[30px] w-[300px]
                            hover:bg-[#B1AC33] hover:text-black hover:border-[#2E2C02] ">{{nombre}}</option>
                    {{/vestidosSelect}}
                </select>
                <input type="submit" name="buscar" value="Buscar"
                       class=" ml-4 border border-[#B1AC33] w-[150px] h-[60px] text-[#B1AC33] text-2xl hover:bg-[#B1AC33] hover:text-black hover:border-[#2E2C02] hover: rounded-3xl">
            </form>
        </div>
        <a class="text-[#B1AC33] lg:text-3xl text-2xl hover:bg-[#B1AC33] hover:text-black hover:border-[#2E2C02] hover: rounded-3xl " href="/vestido/listarVestidos">
            <div class="border border-[#B1AC33] lg:w-[400px] lg:h-[80px] w-[210px] h-[90px] flex items-center justify-center border border-2 rounded-3xl">
                Ver todos los vestidos
            </div>
        </a>
    </div>
    <table class="border border-[#B1AC33] mx-auto mt-20 w-[98%]">
        <tr class="border border-[#B1AC33]">
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Nombre</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Entradas</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Salidas</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Precio</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Stock</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Saldo total</th>
           <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Fecha de pago</th>
        </tr>
    {{#vestidos}}
        <tr class="border border-[#79762D]">
            <td class="text-[#B1AC33] text-2xl p-4 border border-[#B1AC33] font-bold
                    hover:bg-[#B1AC33] hover:text-black hover:border-[#2E2C02]">
                <form action="/vestido/detalle" method="get">
                    <button type="submit" class="hover:bg-[#B1AC33]" name="nombreVestido" value="{{nombre}}">{{nombre}}</button>
                </form>
            </td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{entrada}}</td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{salida}}</td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">${{precio}}</td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{saldoTotalMercaderia}}</td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">${{saldoTotal}}</td>
            <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{fechaPago}}</td>
        </tr>
    {{/vestidos}}
    </table>
    <div class="mx-auto mt-20 flex justify-center flex-wrap mb-20">
        <button class="w-[1000px] h-[80px] border border-2 border-[#B1AC33] rounded-3xl text-[#B1AC33] text-3xl
            hover:bg-[#B1AC33] hover:text-black hover:border-[#2E2C02]" id="mostrarTable">Obtener totales</button>
        <table class="border border-[#B1AC33] mx-auto mt-20 w-[98%] " style="display: none;" id="tabla">
            <tr class=" border border-[#B1AC33]">
                <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Entradas</th>
                <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Salidas</th>
                <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Stock</th>
                <th class="text-[#B1AC33] text-3xl p-4 border border-[#B1AC33]">Saldo total</th>
            </tr>
            {{#totales}}
                <tr>
                    <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{totalEntrada}}</td>
                    <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{totalSalida}}</td>
                    <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{totalStock}}</td>
                    <td class="text-[#B1AC33] text-2xl text-center p-4 border border-[#B1AC33]">{{totalSaldo}}</td>
                </tr>
            {{/totales}}
        </table>
    </div>

</main>
{{>footer}}
