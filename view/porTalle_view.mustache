{{>header}}
<main class="">

    <div class="relative rounded-2xl p-6 bg-[#1C1919] bg-opacity-80  lg:w-[1337px] mx-auto m-10 ">
        <div class="lg:h-[90px] flex justify-center items-center gap-2 my-2 mb-6 mx-auto rounded-2xl p-4 bg-[#1C1919] bg-opacity-80 lg:w-[350px] text-center text-[15px] lg:text-3xl text-white">
            <p>Vestidos por talle</p>
        </div>
        <div class="flex justify-around items-center">
            <a href="/vestido/listarVestidos" class="text-center text-[15px] lg:text-2xl text-white">
                <div class="lg:h-[60px] flex justify-center items-center gap-2 my-2 mb-6 mx-auto rounded-2xl p-4 bg-[#1C1919] bg-opacity-80 lg:w-[300px]">
                    Volver
                </div>
            </a>
        </div>

        <div class=" flex justify-around items-center">
            <div class="lg:h-[90px] flex justify-center items-center  rounded-2xl p-4 bg-[#1C1919] bg-opacity-80 lg:w-[400px]">
                <form action="/vestido/porTalle" method="post">
                    <select class="lg:w-[250px] pl-2" name="nombre">
                        {{#vestidos2}}
                            <option value="{{nombre}}">{{nombre}}</option>
                        {{/vestidos2}}
                    </select>
                    <input class="text-black ml-10 border p-2 bg-white" type="submit" name="buscarVestido" value="Buscar">
                </form>
            </div>
            <a href="/vestido/porTalle" class="text-center text-[15px] lg:text-2xl text-white">
                <div class="lg:h-[60px] flex justify-center items-center gap-2 my-2 mb-6 mx-auto rounded-2xl p-4 bg-[#1C1919] bg-opacity-80 lg:w-[300px]">
                    Ver todos los vestidos
                </div>
            </a>
        </div>

        <table class="bg-[#252121] bg-opacity-80 w-[100%] mx-auto text-center border-collapse mt-12 p-5 mb-6 border">
            {{#totales}}
                <tr class="text-white text-[20px] font-semibold border-t my-1">
                    <td class="border px-4 py-4" colspan="3">Totales</td>
                    <td class="border px-4 py-4">{{cantidadE}}</td>
                    <td class="border px-4 py-4">{{cantidadS}}</td>
                </tr>
            {{/totales}}
            <tr class="text-white text-[20px] font-semibold border-t">
                <th class="border px-4 py-4">Vestido</th>
                <th class="border px-4 py-4">Talle</th>
                <th class="border px-4 py-4">Color</th>
                <th class="border px-4 py-4">Entrada</th>
                <th class="border px-4 py-4">Salida</th>
            </tr>
            {{#vestidos}}
                <tr class="text-white text-[20px] font-semibold border-t my-1">
                    <td class="border px-4 py-4">{{nombre_vestido}}</td>
                    <td class="border px-4 py-4">{{talle_vestido}}</td>
                    <td class="border px-4 py-4">{{color_vestido}}</td>
                    <td class="border px-4 py-4">{{cantidadE}}</td>
                    <td class="border px-4 py-4">{{cantidadS}}</td>
                </tr>
            {{/vestidos}}

        </table>


    </div>
</main>
{{>footer}}